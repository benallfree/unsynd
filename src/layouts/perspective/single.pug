.container
  h6 Connect with {{ .Title }} 
  .social-links.text-center
    | {{ range $site := .Params.social }}
    a.btn.btn-sm.btn-brand(href='{{ $site.url }}')
      i.fa(class='fa-{{ $site.fa }}')
    | {{ end }}
| {{ end }}

